{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "exclude": [
    "./example",
    "node_modules",
    "**/*.spec.ts"]
}
